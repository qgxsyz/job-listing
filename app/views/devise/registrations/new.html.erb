<div class="row user_setup">
  <div class="col-md-4 col-md-offset-4 user_setup_content">
    <div class="col-md-10 col-md-offset-1">
    <h2 class="user_setup_title">注册 逆袭职路 ID</h2>
    <hr />
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email, :label => false, placeholder: '请输入常用的邮箱地址', error: '请输入邮箱地址', required: true, autofocus: true %>
        <%= f.input :name, :label => false, placeholder: '请输入真实姓名', error: '请输入姓名', required: true %>
        <%= f.input :is_admin, :label => false, as: :radio_buttons, collection:  [['我要求职', false], ['我要招人', true]], required: true %>
        <%= f.input :password, :label => false, placeholder: '请输入6-16位密码', error: '请输入6-16位密码', required: true, input_html: { maxlength: 16 } %>
        <%= f.input :password_confirmation, :label => false, placeholder: '确认密码', error: '请输入相同的密码', required: true, input_html: { maxlength: 16 } %>
      </div>
      <div class="form-actions">
        <%= f.button :submit, "注册",class: "button" %>
      </div>
    <% end %>
    <hr />
      <div class="account">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>

